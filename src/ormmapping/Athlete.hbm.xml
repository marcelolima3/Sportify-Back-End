<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="Athlete" table="Athlete" lazy="false">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<many-to-one name="team" cascade="lock" column="TeamID" class="Team" not-null="true" lazy="proxy" access="field">
		</many-to-one>
		<property name="name" column="Name" type="string" length="255" not-null="false" lazy="false"/>
		<property name="nationality" column="Nationality" type="string" length="255" not-null="false" lazy="false"/>
		<property name="genre" column="Genre" type="string" length="255" not-null="false" lazy="false"/>
		<set name="ORM_Matches" table="Match_Athlete" lazy="true" cascade="save-update,lock" inverse="true">
			<key column="AthleteID" not-null="true"/>
			<many-to-many column="MatchID" class="Match">
			</many-to-many>
		</set>
	</class>
</hibernate-mapping>
