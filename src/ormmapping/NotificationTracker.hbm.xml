<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="NotificationTracker" table="NotificationTracker" lazy="false">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<property name="notificationPolicy" column="NotificationPolicy" type="string" length="255" not-null="false" lazy="false"/>
		<set name="ORM_NotificationHistory" table="NotificationTracker_Event" lazy="true" cascade="save-update,lock">
			<key column="NotificationTrackerID" not-null="true"/>
			<many-to-many column="EventID" class="event.Event">
			</many-to-many>
		</set>
	</class>
</hibernate-mapping>
