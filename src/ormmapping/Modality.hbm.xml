<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="Modality" table="Modality" lazy="false">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<property name="name" column="Name" type="string" length="255" not-null="false" lazy="false"/>
		<set name="ORM_Events" lazy="true" cascade="save-update,lock" inverse="false">
			<key column="ModalityID" not-null="true"/>
			<one-to-many class="event.EventCategory"/>
		</set>
		<set name="ORM_Competitions" lazy="true" cascade="save-update,lock" inverse="false">
			<key column="ModalityID" not-null="true"/>
			<one-to-many class="Competition"/>
		</set>
		<set name="ORM_Teams" lazy="true" cascade="save-update,lock" inverse="false">
			<key column="ModalityID" not-null="true"/>
			<one-to-many class="Team"/>
		</set>
	</class>
</hibernate-mapping>
