<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="user.Invoice" table="Invoice" lazy="false">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<property name="date" column="`Date`" type="date" not-null="false" lazy="false"/>
		<property name="amount" column="Amount" type="big_decimal" precision="19" scale="0" not-null="false" lazy="false"/>
		<set name="ORM_Subscriptions" lazy="true" cascade="save-update,lock" inverse="false">
			<key column="InvoiceID" not-null="true"/>
			<one-to-many class="user.Subscription"/>
		</set>
	</class>
</hibernate-mapping>
