<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="user.User" table="`User`" lazy="false">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<many-to-one name="paymentManager" column="PaymentMethodID" class="user.PaymentMethod" cascade="save-update,lock" unique="true" not-null="true" lazy="proxy" access="field">
		</many-to-one>
		<property name="name" column="Name" type="string" length="255" not-null="false" lazy="false"/>
		<property name="email" column="Email" type="string" length="255" not-null="false" lazy="false"/>
		<property name="password" column="Password" type="string" length="255" not-null="false" lazy="false"/>
		<property name="registrationDate" column="RegistrationDate" type="date" not-null="false" lazy="false"/>
		<set name="ORM_Subscriptions" lazy="true" cascade="save-update,lock" inverse="false">
			<key column="UserID" not-null="true"/>
			<one-to-many class="user.Subscription"/>
		</set>
	</class>
</hibernate-mapping>
