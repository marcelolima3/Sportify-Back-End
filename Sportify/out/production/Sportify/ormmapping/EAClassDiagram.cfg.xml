<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
 "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
   	<!-- properties -->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/sportify</property>
		<property name="connection.username">root</property>
		<property name="connection.password">root</property>
		<property name="show_sql">false</property>
		<property name="query.substitutions">true 1, false 0, yes 'Y', no 'N'</property>
		<!-- mapping files -->
		<mapping resource="ormmapping/competition/Competition.hbm.xml" />
		<mapping resource="ormmapping/competition/Match.hbm.xml" />
		<mapping resource="ormmapping/competition/Modality.hbm.xml" />
		<mapping resource="ormmapping/competition/Sport.hbm.xml" />
		<mapping resource="ormmapping/event/Event.hbm.xml" />
		<mapping resource="ormmapping/event/EventCategory.hbm.xml" />
		<mapping resource="ormmapping/subentities/Athlete.hbm.xml" />
		<mapping resource="ormmapping/subentities/Team.hbm.xml" />
		<mapping resource="ormmapping/user/Invoice.hbm.xml" />
		<mapping resource="ormmapping/user/NotificationTracker.hbm.xml" />
		<mapping resource="ormmapping/user/PaymentMethod.hbm.xml" />
		<mapping resource="ormmapping/user/Subscription.hbm.xml" />
		<mapping resource="ormmapping/user/User.hbm.xml" />
	</session-factory>
</hibernate-configuration>
