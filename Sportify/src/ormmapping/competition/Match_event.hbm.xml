<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="sportify.competition.Match_event" table="Match_event" lazy="false">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<property name="description" column="Description" type="string" length="255" not-null="false" lazy="false"/>
		<property name="startTime" column="StartTime" type="date" not-null="false" lazy="false"/>
		<property name="endTime" column="EndTime" type="date" not-null="false" lazy="false"/>
		<property name="location" column="Location" type="string" length="255" not-null="false" lazy="false"/>
		<property name="active" column="Active" type="boolean" not-null="false" lazy="false"/>
		<set name="ORM_Events" lazy="true" cascade="save-update,lock" inverse="false">
			<key column="Match_eventID" not-null="true"/>
			<one-to-many class="sportify.event.Event"/>
		</set>
		<set name="ORM_Athletes" table="Match_event_Athlete" lazy="true" cascade="save-update,lock">
			<key column="Match_eventID" not-null="true"/>
			<many-to-many column="AthleteID" class="sportify.subentities.Athlete">
			</many-to-many>
		</set>
	</class>
</hibernate-mapping>
