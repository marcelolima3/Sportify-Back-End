<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="sportify.event.Event" table="Event" lazy="false">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<many-to-one name="category" column="EventCategoryID" class="sportify.event.EventCategory" cascade="save-update,lock" unique="true" not-null="true" lazy="proxy" access="field">
		</many-to-one>
		<property name="textFormat" column="TextFormat" type="string" length="255" not-null="false" lazy="false"/>
		<property name="imageFormat" column="ImageFormat" type="string" length="255" not-null="false" lazy="false"/>
		<property name="videoFormat" column="VideoFormat" type="string" length="255" not-null="false" lazy="false"/>
	</class>
</hibernate-mapping>
